/**index.wxss**/
.slide-image{  
     width: 100%;
    height: 100%;   
} 
.ding-search{
  background-color: #8cc447;
  display: flex;
  flex-wrap: nowrap;
  padding:10rpx 20rpx;
}
.ding-search form{
  position: relative;
  width: 540rpx;
}
.weizhi{
  color:#fff;
  width:150rpx;
  height: 50rpx;

  margin-right: 10rpx;
} 
.weizhi b{
  width:10rpx;
  height:10rpx;
  display: inline-block;
  border:10rpx solid transparent;
  border-top:10rpx solid #fff;
}
.search-input{
  background-color:#fff;
  position: relative;
  border-radius: 10rpx;
  width: 540rpx;
  height: 65rpx;
}
.search-input icon{
  position: absolute;
  top: 10rpx;
  left: 15rpx;
}
.search-input input{
  position: absolute;
  top:0;
  left:80rpx;
  height: 65rpx;
}
.nav-list{
  background-color:#fff;
  width:100%;
  display:flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  padding:30rpx 0;
  font-size: 24rpx;
  text-align: center;
}
.nav-list image{
  width:84rpx;
  height: 84rpx;
}
.classify-title{
  width:710rpx;
  height:84rpx;
  line-height: 84rpx;
  position: relative;
  color:#aad677;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding-left:10rpx;
}
.classify-title text{
  border-left:4px solid #aad677;
  padding-left:20rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top:17rpx;
}
.shop-list{
  width:710rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.zhaoshang{
  margin-top:30rpx;
}
.zhaoshang image{
  width:710rpx;
  height: 120rpx;
}
.leave-word-model{
  width:100%;
  background-color: #fff;
  box-sizing: boeder-box;
  padding:20rpx 0 68rpx;
}
.leave-word{
  width:710rpx;
  height: 56rpx;
  margin:0 auto;
  margin-bottom:20rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.leave-word input{
  height:100%;
  width:480rpx;
  border:1px solid #efefef;
  box-sizing: border-box;
  padding-left:10rpx;
}
.leave-word-model button{
  width:200rpx;
  height:72rpx;
  background-color:#333;
  color:#fff;
  line-height: 72rpx;
  margin-top:40rpx;
}
.picker-box{
  height:100%;
  width:480rpx;
  border:1px solid #efefef;
  box-sizing: border-box;
  padding-left:10rpx; 
}