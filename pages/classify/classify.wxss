/* pages/classify/classify.wxss */
page{height:100%}
.search-container{
  width: 100%;
  height:80rpx; 
}
.search-input{
  background-color:#fff;
  border-radius: 30rpx;
  width: 700rpx;
  height: 60rpx;
  margin:10rpx auto;
  position: relative;
}
.search-input icon{
  position: absolute;
  left:20rpx;
  top:10rpx;
}
.search-input input{
  position: absolute;
  text-align: center;
  height:60rpx;
  width:600rpx;
  top:0;
  left:80rpx;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap; /*不换行*/
  z-index: 99; 
  background-color: #fff;
}
.tab-h.active{
  position: fixed;
  top:0;
  left:0;
  box-shadow: 0 0 5px #eee;
}
.tab-item {
  height: 80rpx;
  margin: 0 20rpx;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
  border: 0;
}
.tab-item.active {
  color: #8cc447;
  position: relative;
  border-bottom: 6rpx solid #8cc447;

}
.loading_box {
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
}
.loading_box>view {
  display: inline-block;
}
.loading { 
  background-size: cover;
  width: 50rpx;
  height: 50rpx;
  -webkit-animation: loading 1s steps(12, end) infinite;
  animation: loading 1s steps(12, end) infinite;
}

@-webkit-keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}

@keyframes loading {
  0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
.tab-content{
  height:100%;
}
.tab-content swiper-item{
  padding-top:20rpx;
  margin-bottom:50rpx;
}
.shop-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
} 
.nodata-desc{
  display: block;
  margin:0 auto;
  margin-top:200rpx;
  text-align: center;
}
.tab-content goods{
  margin-bottom:20rpx;
  margin-left: 23rpx;
}