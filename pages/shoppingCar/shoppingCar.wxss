/* pages/shoppingCar/shoppingCar.wxss */
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 250rpx;
    height: 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
    background-color: #fff;
    margin-top:10rpx;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 150rpx;
    height: 150rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 450rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
}
.cart-list .cart-pro-price{
    color:red;
}
.cart-list .cart-count-box{
    position: absolute;
    right:200rpx;
    bottom: 30rpx;
    /* width: 250rpx; */
    height: 50rpx;
    box-sizing: border-box;
    border:1px solid #f5f5f5;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 50rpx;
    height: 50rpx;
    text-align: center;
    box-sizing: border-box;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    background-color: #f5f5f5;
}
.cart-count-num{
    width: 70rpx;
    height:50rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    box-sizing: border-box;
    background: #fff;
    display: flex;
    flex-wrap: nowrap;
     justify-content: space-between;
}
.cart-footer .left{
  width:200rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
}
.left text{
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
}
.cart-footer .center{
  width: 300rpx;
  color:#666;
  font-size: 30rpx;
  height: 90rpx;
  text-align: right;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}
.cart-footer .right{
  width:225rpx;
  height: 90rpx;
  background-color: #8cc447;
  text-align: center;
  line-height: 90rpx;
  color:#fff;
}