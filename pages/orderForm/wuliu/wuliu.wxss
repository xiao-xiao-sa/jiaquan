/* pages/orderForm/wuliu/wuliu.wxss */
.top{
  width:700rpx;
  height: 160rpx;
  background-color: #fff;
  border-radius: 10rpx; 
  margin:20rpx auto;
  position: relative;
}
.kd-img{
  width:100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #666;
  margin:30rpx 20rpx;
}
.company{
  display: inline-block;
  height: 100%;
  line-height: 160rpx;
  position: absolute;
  top: 0;
  left:140rpx;
  font-size: 40rpx;
}
.wuliu-list{
  background-color: #fff;
  width: 700rpx;
  margin:20rpx auto;
  border-radius: 10rpx;
}
.wuliu-list .title{
  width:100%;
  height: 90rpx;
  border-bottom: 1px solid #efefef;
  line-height: 90rpx;
  font-size: 34rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.wuliu-item{
  width: 600;
  box-sizing: border-box;
  padding:35rpx 20rpx 35rpx 5rpx;
  margin-left:100rpx;
  border-left:1px dashed #000;
}