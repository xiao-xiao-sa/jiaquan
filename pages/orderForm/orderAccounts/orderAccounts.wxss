/* pages/orderForm/orderAccounts/orderAccounts.wxss */
.user-info{
	background-color: #fff;
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-between;
	padding:30rpx 20rpx;
	margin-bottom: 20rpx;
}
.user-info image{
	width: 25rpx;
	height: 35rpx;
}
.info-right{
	width: 652rpx;
}
.info-top{
	width:100%;
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.info-bottom{
	color:#666;
}
.order-list{
  background-color:#fff;
  margin-bottom:20rpx;
}
.order-middle{
	display: flex;
	flex-wrap: nowrap;
	justify-content: space-between;
	padding:15rpx 20rpx;
  position: relative;
  border-bottom:1px solid #efefef;
}
.order-middle image{
	width:150rpx;
	height: 150rpx;
}
.order-center{
	width:340rpx;
}
.order-right{
	text-align: right;
	width: 180rpx;
}
.cart-count-box{
    position: absolute;
    right:25rpx;
    bottom: 30rpx;
    /* width: 250rpx; */
    height: 50rpx;
    box-sizing: border-box;
    border:1px solid #f5f5f5;
}
.cart-count-box text{
    display: inline-block;
    line-height: 50rpx;
    height: 50rpx;
    text-align: center;
    box-sizing: border-box;
}
.cart-count-down,.cart-count-add{
    font-size: 44rpx;
    width: 50rpx;
    background-color: #f5f5f5;
}
.cart-count-num{
    width: 70rpx;
    height:50rpx;
}
.buy-message{
  color:#666;
  padding:25rpx;
}
.buy-message textarea{
  width:100%;
  height: 50rpx;
}
.total{
  background-color: #fff;
  width:100%;
  padding:25rpx;
  box-sizing: border-box;
}
.total-price,.total-freight{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.total-price .right{
  color:red;

}
.total-freight .right{
  color:#666;
}
.account{
  width:100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom:0;
  background-color: #fff;
  display: flex;
  flex-wrap:nowrap;
  justify-content: flex-end; 
}
.account button{
  margin:0;
  background-color: #8cc447;
  color: #fff;
  height: 100%;
  width: 270rpx;
  border-radius: 0;
  border:none;
}
.account text{
  height: 100%;
  line-height: 90rpx;
  padding-right: 20rpx;
  color: red;
}